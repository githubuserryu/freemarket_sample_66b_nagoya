%div.tab-content
  %ul#mypage-tab-transaction-now.mypage-item-list.tab-pane.active
    %li
      = link_to item_path(item), class:"mypage-item-link" do
        %figure
          - item_img = ItemImg.find_by(item_id: item[:id])
          - if item_img == nil 
            = image_tag "no_image.jpg", class:"img"
          - else
            = image_tag item_img.img.url, class:"img"
        .mypage-item-body.show-stock-item
          .mypage-item-text
            = item.name
          %div
            %span.listing-item-count
              %i.far.fa-heart
              %span
                いいね数
            %span.listing-item-count
              %i.far.fa-comment-alt
              %span
                コメント数
              %div.mypage-item-status.bold.action-required
                = item.trade_step
          %i.fas.fa-chevron-right