.content__title
  %h2 クレジットカード情報入力
.content__credit-card
  .content__credit-card__inner
    = form_with url: cards_path, method: :post, html: { name: "inputForm" } do |f| # createアクションのパスを指定
      = f.label :カード番号, class: 'label'
      %span 必須
      = f.text_field :card_number, type: 'text', class: 'input-number', placeholder: '半角数字のみ', maxlength: "16"
      .cards-expire
        = f.label :有効期限, class: 'label'
        %span 必須
        %br
        .cards-expire__wrap
          = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'input-expire'
          %span.expire-text 月
          %br
        .cards-expire__wrap
          = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'input-expire'
          %span.expire-text 年
      .cards-expire
        = f.label :セキュリティコード, class: 'label'
        %span 必須
        = f.text_field :cvc, type: 'text', class: 'input-number', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"
      .content-bottom#card_token
        = f.submit '追加する', class: 'content-bottom--add-btn', id: 'token_submit'

  .spend__main
    .spend__main__card-num
      %label.spend-font カード番号
      %span.requred 必須
      %input.card-num{name: "num",placeholder: "例）半角数字のみ", type: "num",value: ""}/ 
      = image_tag "card_5brand_500px", alt: "顔写真", class: "cregit"
    .spend__main__expiration
      %label.spend-font 有効期限
      %span.requred 必須
      .spend__main__expiration__days
        .spend__main__expiration__year
          %select.expiration-day
          %span.spend-day 年
        .spend__main__expiration__month
          %select.expiration-day
          %label.spend-day 月

    .spend__main__security-num
      %label.spend-font セキュリティコード
      %span.requred 必須
      %input.security-num{name: "num",placeholder: "例）カード背面4桁もしくは3桁の番号", type: "num",value: ""}/

    .spend__main__next
      = link_to "追加する" :back, class: "next"

