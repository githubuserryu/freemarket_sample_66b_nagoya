<h2>開発用ログイン画面</h2>

<%= form_for(@user, url: new_user_registration_path, html: {method: "post"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :お名前 %><br />
    <%= f.text_field :family_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :お名前カナ %><br />
    <%= f.text_field :family_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :生年月日 %><br>
    <%= f.select :birth_year, User.birth_years.keys, prompt:"--" %>年
    <%= f.select :birth_month, [[1,1],[2,2]],prompt:"--" %>月
    <%= f.select :birth_day, [[1,1],[2,2]], prompt:"--" %>日
  </div>

  <%= flash[:recaptcha_error] %>
  <%= recaptcha_tags %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>