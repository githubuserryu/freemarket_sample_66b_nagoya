- breadcrumb :mypage 
= render "layouts/header"
%main
  .content
    = render "layouts/sideber"
    = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
      .spend__area__new
        .spend__title
          %p.spend-title クレジットカード情報入力
        .spend__main
          .spend__main__card-num 
            %label.spend-font カード番号
            %span.requred 必須
            = text_field_tag "number", "", class: "card-num", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            = image_tag "card_5brand_500px", alt: "顔写真", class: "cregit"
          .spend__main__expiration
            %label.spend-font 有効期限
            %span.requred 必須
            .spend__main__expiration__days
              .spend__main__expiration__year
                %select#exp_year.expiration-day{name: "exp_year", type: "text"}
                  %option{value: ""} --
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                %span.spend-day 年
              .spend__main__expiration__month
                %select#exp_month.expiration-day{name: "exp_month", type: "text"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %span.spend-day 月
          .spend__main__security-num
            %label.spend-font セキュリティコード
            %span.requred 必須
            = text_field_tag "cvc", "", class: "security-num", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
          .spend__main__next
            #card_token
            = submit_tag "追加する", id: "token_submit", class:"next"
= render "layouts/footer"
= render "layouts/exhibition"
