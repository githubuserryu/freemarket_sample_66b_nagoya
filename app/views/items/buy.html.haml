= render "layouts/sub_header"
%main
  .buy
    .item-box
      .buy-head
        購入内容の確認
      .buy-content.box
        .item-info
          .item-info-img
            = image_tag 'IMG_34498.jpg', alt: '商品写真'
          .item-info-detail
            .item-info-name
              = @item.name
            .item-info-price
              %span ¥
              = @item.price.to_s(:delimited, delimiter: ',')
              = @item.charge
      .buy-content.box
        .buy-content-inner
          %form
            .buy-price-box.box
              .buy-price-box-label 支払い金額
              .buy-price
                = @item.price.to_s(:delimited, delimiter: ',')
            .buy-payment.box
              %span 支払い方法
              -# 支払い方法の有無で条件分岐
              %br/
              = link_to({}, class:"buy-payment-link") do
                %i.fas.fa-plus-circle
                %span 登録してください
            .user-info.box
              .user-info-label
                %span 配送先
                = link_to('変更する', {}, class:"user-info-link")
              .user-info-address
                = @address.post_code
                %br/
                = @address.prefecture
                = @address.city
                = @address.address
                = @address.building
                %br/
                = current_user.family_name
                = current_user.first_name
            .buy-content
              %button 購入する
= render "layouts/sub_footer"